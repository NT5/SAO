{% extends "base.twig" %}

{% block content %}
    <div class="container">
        <br>
        <br>
        <br>
        <div class="row">
            <form class="col s12" method="POST">
                <div class="row">
                    <div class="input-field col s6">
                        <select name='carrera'>
                            <option value="" disabled selected>Elige una carrera</option>
                            {% for carrera in listaCarreras %}
                                <option value="{{ carrera.Id_Carrera }}">{{ carrera.Nombre }}</option>
                            {% endfor %}
                        </select>
                        <label>Carrera</label>
                    </div>
                    <div class="input-field col s6">
                        <input id="Año_de_la_Carrera" type="text" class="validate" name='año_carrera'>
                        <label for="Año_de_la_Carrera">Año de la Carrera</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <input placeholder="Trimestre" id="Trimestre" type="text" class="validate" name='trimestre'>
                        <label for="Trimestre"></label>
                    </div>
                    <div class="input-field col s6">
                        <select name='Asignaturas'>
                            <option value="" disabled selected>Elige una Asignatura</option>
                            {% for Asignaturas in listaAsignaturas %}
                                <option value="{{ Asignaturas.Id_Asignatura }}">{{ Asignaturas.Nombre }}</option>
                            {% endfor %}
                        </select>
                        <label>Asignaturas</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <input placeholder="Código de la Asignatura" id="codigo_de_la_asignatura" type="text" class="validate" name='codigo_signatura'>
                        <label for="codigo_de_la_Asignatura"></label>
                    </div>
                    <div class="input-field col s6">
                        <input id="codigo_de_grupo" type="text" class="validate" name='codigo_grupo'>
                        <label for="codigo_de_grupo">Código de grupo</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <select name='modalidad'>
                            <option value="" disabled selected>Elige una modalidad</option>
                            <option value="Regular">Regular</option>
                            <option value="Por encuentros">Por encuentros</option>
                        </select>
                        <label>Modalidad</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col s6">
                        <button class="btn waves-effect waves-light" type="submit" name="action">Guardar
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

